<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false">

  <variable name="ApplicationName" value="DineshsStupidApps" />
  <variable name="ApplicationModule" value="PDFPArser" />
  <variable name="LogDirectory" value="D:\${ApplicationName}\${ApplicationName}-${ApplicationModule}\"/>
  <targets>
    <target name="file"
              xsi:type="File"
              fileName="${LogDirectory}\${ApplicationModule}.log"
              layout="${longdate} | ${level} | ${logger} | ${message} | ${exception:format=tostring}"
              archiveFileName="${LogDirectory}\${ApplicationModule}_${shortdate}.{##}.log"
              keepFileOpen="true"
              archiveNumbering="Sequence"
              archiveEvery="Day"
              maxArchiveFiles="30"/>
    <target xsi:type="ColoredConsole"
        name="Console"
            layout="${longdate} - ${level:uppercase=true}: ${message}"
   
    />
  </targets>

  <rules>
    <logger name="*" writeTo="File,Console" minlevel="Debug" />
  </rules>
</nlog>